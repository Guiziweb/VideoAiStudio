{# VARIATION 1: STEPPER INTERACTIF AVEC PROGRESSION #}
<section class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold">Créez votre vidéo en 3 étapes</h2>
            <p class="lead text-muted">Une expérience simplifiée pour des résultats professionnels</p>
        </div>
        
        <div class="row justify-content-center">
            <div class="col-lg-10">
                {# Progress bar #}
                <div class="d-flex justify-content-between mb-5 position-relative">
                    <div class="position-absolute top-50 start-0 w-100 translate-middle-y" style="height: 4px; background: linear-gradient(to right, #0d6efd 33%, #198754 66%, #fd7e14 100%); z-index: 1;"></div>
                    
                    {% for step in 1..3 %}
                        <div class="text-center position-relative" style="z-index: 2;">
                            <div class="bg-{{ step == 1 ? 'primary' : (step == 2 ? 'success' : 'warning') }} rounded-circle d-flex align-items-center justify-content-center text-white fw-bold mb-3 shadow-lg" 
                                 style="width: 60px; height: 60px; cursor: pointer; transition: transform 0.3s ease;" 
                                 onmouseover="this.style.transform='scale(1.1)'" 
                                 onmouseout="this.style.transform='scale(1)'">
                                {{ step }}
                            </div>
                            <h5 class="fw-bold">
                                {{ step == 1 ? 'Achetez' : (step == 2 ? 'Décrivez' : 'Téléchargez') }}
                            </h5>
                        </div>
                    {% endfor %}
                </div>
                
                {# Content cards #}
                <div class="row g-4">
                    <div class="col-md-4">
                        <div class="card border-0 shadow-sm h-100 hover-card">
                            <div class="card-body p-4 text-center">
                                <div class="bg-primary bg-opacity-10 rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                                    {{ ux_icon('tabler:credit-card', { class: 'icon icon-lg text-primary' }) }}
                                </div>
                                <h5 class="fw-bold mb-3">Choisissez vos tokens</h5>
                                <p class="text-muted mb-4">Sélectionnez le pack qui correspond à vos besoins. Paiement sécurisé, tokens disponibles instantanément.</p>
                                <span class="badge bg-primary">Dès 9€</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="card border-0 shadow-sm h-100 hover-card">
                            <div class="card-body p-4 text-center">
                                <div class="bg-success bg-opacity-10 rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                                    {{ ux_icon('tabler:wand', { class: 'icon icon-lg text-success' }) }}
                                </div>
                                <h5 class="fw-bold mb-3">Décrivez votre vision</h5>
                                <p class="text-muted mb-4">Utilisez notre interface intuitive pour décrire précisément la vidéo que vous souhaitez créer.</p>
                                <span class="badge bg-success">IA avancée</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="card border-0 shadow-sm h-100 hover-card">
                            <div class="card-body p-4 text-center">
                                <div class="bg-warning bg-opacity-10 rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                                    {{ ux_icon('tabler:download', { class: 'icon icon-lg text-warning' }) }}
