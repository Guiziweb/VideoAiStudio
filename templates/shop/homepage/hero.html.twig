{% import '@SyliusShop/shared/buttons.html.twig' as buttons %}

<section class="py-5" style="background: linear-gradient(135deg, rgba(var(--bs-primary-rgb), 0.1) 0%, rgba(var(--bs-secondary-rgb), 0.05) 100%);">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-12 col-lg-10 col-xl-8">
                <div class="py-5">
                    <h1 class="display-4 fw-bold text-dark mb-4">
                        {{ 'app.homepage.hero.title'|trans }}
                    </h1>
                    <p class="fs-5 text-muted mb-5">
                        {{ 'app.homepage.hero.subtitle'|trans }}
                    </p>
                    
                    <div class="d-flex gap-3 justify-content-center flex-wrap">
                        {% if app.user %}
                            <a href="{{ path('app_shop_video_generation_create') }}" class="btn btn-primary fw-semibold">
                                {{ ux_icon('tabler:sparkles', { class: 'icon icon-sm me-2' }) }}
                                {{ 'app.homepage.hero.cta_generate'|trans }}
                            </a>
                            <a href="{{ path('app_shop_video_generation_index') }}" class="btn btn-outline-primary fw-semibold">
                                {{ ux_icon('tabler:video', { class: 'icon icon-sm me-2' }) }}
                                {{ 'app.homepage.hero.cta_gallery'|trans }}
                            </a>
                        {% else %}
                            <a href="{{ path('sylius_shop_register') }}" class="btn btn-primary fw-semibold">
                                {{ ux_icon('tabler:sparkles', { class: 'icon icon-sm me-2' }) }}
                                {{ 'app.homepage.hero.cta_start'|trans }}
                            </a>
                            <a href="{{ path('sylius_shop_login') }}" class="btn btn-outline-primary fw-semibold">
                                {{ ux_icon('tabler:login', { class: 'icon icon-sm me-2' }) }}
                                {{ 'app.homepage.hero.cta_login'|trans }}
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>