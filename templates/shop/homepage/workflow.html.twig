

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="text-center mb-5">
                    <h2 class="display-5 fw-bold">{{ 'app.homepage.workflow.title'|trans }}</h2>
                    <p class="lead">{{ 'app.homepage.workflow.subtitle'|trans }}</p>
                </div>

                <div class="timeline position-relative">
                    {% for item in [
                        {step: 1, icon: 'tabler:wallet', stepKey: 'step1', color: 'primary'},
                        {step: 2, icon: 'tabler:brain', stepKey: 'step2', color: 'success'},
                        {step: 3, icon: 'tabler:video', stepKey: 'step3', color: 'warning'}
                    ] %}
                        <div class="d-flex align-items-start mb-5 timeline-item" style="opacity: 0; transform: translateX(-50px); animation: slideIn 0.6s ease forwards; animation-delay: {{ (item.step - 1) * 0.2 }}s;">
                            <div class="flex-shrink-0 me-4">
                                <div class="bg-{{ item.color }} rounded-circle d-flex align-items-center justify-content-center text-white shadow-lg" style="width: 70px; height: 70px;">
                                    {{ ux_icon(item.icon, { class: 'icon icon-lg' }) }}
                                </div>
                                {% if not loop.last %}
                                    <div class="bg-{{ item.color }} mx-auto mt-3" style="width: 3px; height: 100px; opacity: 0.3;"></div>
                                {% endif %}
                            </div>
                            <div class="flex-grow-1">
                                <div class="d-flex align-items-center mb-2">
                                    <span class="badge bg-{{ item.color }} me-3">{{ ('app.homepage.workflow.' ~ item.stepKey ~ '.step')|trans }}</span>
                                    <h4 class="fw-bold mb-0">{{ ('app.homepage.workflow.' ~ item.stepKey ~ '.title')|trans }}</h4>
                                </div>
                                <p class="text-{{ item.color }} fw-semibold mb-2">{{ ('app.homepage.workflow.' ~ item.stepKey ~ '.subtitle')|trans }}</p>
                                <p class="text-muted mb-0">{{ ('app.homepage.workflow.' ~ item.stepKey ~ '.description')|trans }}</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>

<style>
@keyframes slideIn {
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

.timeline-item {
    opacity: 0;
    transform: translateX(-50px);
}
</style>
