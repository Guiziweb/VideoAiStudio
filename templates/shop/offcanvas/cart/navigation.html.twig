{% if app.user %}
    <div class="mb-4">
        <h6 class="fw-semibold text-dark mb-3 d-flex align-items-center">
            {{ ux_icon('tabler:user-circle', { class: 'icon me-2 text-primary' }) }}
            {{ 'sylius.ui.my_account'|trans }}
        </h6>
        
        <div class="card bg-light border-0 mb-3">
            <div class="card-body p-3">
                <div class="d-flex align-items-center justify-content-between">
                    <a href="{{ path('app_shop_tokens_buy') }}" class="btn btn-sm btn-outline-primary d-flex align-items-center">
                        <span class="fw-bold me-2">{{ app.user.customer.wallet.balance }}</span>
                        {{ ux_icon('tabler:coins', { class: 'icon icon-sm' }) }}
                    </a>
                    <div class="d-flex gap-2">
                        <a href="{{ path('sylius_shop_account_dashboard') }}" class="btn btn-sm btn-outline-secondary">
                            {{ ux_icon('tabler:user', { class: 'icon icon-sm' }) }}
                        </a>
                        <a href="{{ path('sylius_shop_logout') }}" class="btn btn-sm btn-outline-secondary">
                            {{ ux_icon('tabler:logout', { class: 'icon icon-sm' }) }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mb-4">
        <h6 class="fw-semibold text-dark mb-3 d-flex align-items-center">
            {{ ux_icon('tabler:apps', { class: 'icon me-2 text-primary' }) }}
            {{ 'app.ui.services'|trans }}
        </h6>
        
        <div class="row g-2">
            <div class="col-6">
                <a href="{{ path('app_shop_video_generation_create') }}" class="text-decoration-none">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center p-3">
                            <div class="mb-2">
                                {{ ux_icon('tabler:sparkles', { class: 'icon icon-lg text-primary' }) }}
                            </div>
                            <div class="small fw-semibold text-dark">{{ 'app.ui.generate_video_menu'|trans }}</div>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-6">
                <a href="{{ path('app_shop_video_generation_index') }}" class="text-decoration-none">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center p-3">
                            <div class="mb-2">
                                {{ ux_icon('tabler:video', { class: 'icon icon-lg text-primary' }) }}
                            </div>
                            <div class="small fw-semibold text-dark">{{ 'app.ui.my_video_generations'|trans }}</div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
{% else %}
    <div class="text-center py-5">
        <div class="mb-4">
            {{ ux_icon('tabler:user-circle', { class: 'icon text-muted', style: 'width: 4rem; height: 4rem;' }) }}
        </div>
        <p class="text-muted mb-4">
            {{ 'app.ui.login_to_access_services'|trans }}
        </p>
        <div class="d-grid gap-2">
            <a href="{{ path('sylius_shop_login') }}" class="btn btn-primary">
                {{ ux_icon('tabler:login', { class: 'icon icon-sm me-2' }) }}
                {{ 'sylius.ui.login'|trans }}
            </a>
            <a href="{{ path('sylius_shop_register') }}" class="btn btn-outline-primary">
                {{ ux_icon('tabler:user-plus', { class: 'icon icon-sm me-2' }) }}
                {{ 'sylius.ui.register'|trans }}
            </a>
        </div>
    </div>
{% endif %}
