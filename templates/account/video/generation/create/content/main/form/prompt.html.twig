{% import '@SyliusShop/shared/buttons.html.twig' as buttons %}
{% set form = hookable_metadata.context.form %}

<div class="col-lg-8">
    <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
            <div class="mb-3">
                {{ form_label(form.prompt, null, { label_attr: { class: 'form-label' } }) }}
                {{ form_widget(form.prompt, { 
                    attr: { 
                        class: 'form-control border-light bg-light' ~ (not form.prompt.vars.valid ? ' is-invalid' : ''),
                        rows: 6,
                        placeholder: 'Describe the video you want to create...',
                        'data-test': 'prompt-field'
                    }
                }) }}
                {{ form_errors(form.prompt) }}
            </div>
            
            <div class="d-flex justify-content-end">
                {{ buttons.submit('sylius.ui.create'|trans, 'generate-video', 'tabler:sparkles', 'btn-primary') }}
            </div>
        </div>
    </div>
</div>